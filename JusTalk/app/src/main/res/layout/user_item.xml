<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/profile_image_user_item"
        android:layout_width="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/username_user_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_toRightOf="@id/profile_image_user_item"
        android:layout_toEndOf="@id/profile_image_user_item"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/verified_user_profile"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/username_user_item"
        android:layout_marginLeft="4dp"
        android:src="@drawable/verifieduser"
        android:layout_width="18sp"
        android:layout_height="18sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp"
        android:id="@+id/img_on"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:layout_below="@+id/username_user_item"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@+id/profile_image_user_item"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_image_user_item"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="10dp"
        android:id="@+id/img_off"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:layout_below="@+id/username_user_item"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@+id/profile_image_user_item"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_image_user_item"/>

    <TextView
        android:id="@+id/last_msg"
        android:layout_below="@+id/username_user_item"
        android:layout_toRightOf="@+id/profile_image_user_item"
        android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:maxLines="1"/>+
</RelativeLayout>